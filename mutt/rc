source /home/aarons/.Mutt/aliases

set editor="vim '+/^$/+1'"
#set editor="gnuclient -nw"
set alias_file=~/.Mutt/aliases

set nohelp

set confirmappend=no
set confirmcreate=no

set print=ask-no    # confirm printing
set delete=yes      # purge deleted messages? normally yes, but meaning differs
                    # between 0.61 and 0.62
set recall=no       # don't ask about recalling when mailing
set copy=yes
set move=yes        # automatically move read messages to read folder
set include=yes     # include message in replies
set postpone=no     # never postpone when quitting send menu
set abort_unmodified=no
set abort_nosubject=no

set quit=ask-yes
#set autoedit                   # go straight to editor for messages
set fast_reply                 # go straight to editor for replies
set edit_hdrs                  #    include headers in editor
set dsn_notify=failure         # notify on transmission failure
set dsn_return=full            #   include full message
set folder=~/Mail
set header                     # include full header in replies
set nomime_fwd                   # forward as attachment
set pager_context=1            # show 1 line from prev. page
set postponed=+Postponed       # where to save postponed messages
set record=+Misc               # save copies of outgoing mail
set mbox=+Misc
set reverse_alias              # show aliases in message lists
set reverse_name               # use address mail was sent to when replying
set save_name                  # save messages in folder named for addressee
set tilde                      # pad end of messages
set timeout=30                 # seconds inactivity before looking for new mail
#set web_browser="url_handler.sh"
set nomark_old                 # all unread mail is marked as new
set see_old
#set skip_old
#set pgp_default_version="pgp5"
source ~/.Mutt/gpg.rc
set pgp_sign_as="0xE8D1D751"
set pgp_verify_sig=yes         # Verify signature automatically
set pgp_replyencrypt
set pgp_replysign
set use_domain
set hostname='execpc.com'
set nopipe_decode              # don't decode MIME or weed headers when piping
set nowait_key                 # don't wait for a key after running programs
set nobeep
#set pager_stop
set allow_8bit=no

bind  pager 	b	previous-page
bind  pager	B	bounce-message
bind  pager     *       bottom
bind  pager     G       bottom
bind  pager	<Up>	previous-line
bind  pager	<Down>	next-line
bind  pager     "\Cn"   search-next
bind  pager     n       next-unread
macro pager     "\Ck"	"|pgp -kaf\n"
macro pager     "\Cb"   "|urlview\n"

bind  index	B	bounce-message
bind  index     n       next-entry
macro index     A       "c+Lists/inet\n"
macro index     "\Ck"	"|pgp -kaf\n"
#macro index	G	"!fetchmail\n"
macro index     i       ":set hdr_format='%4C %Z %?[?%[%H:%M]&%[%m/%d]? %-15.15F (%4l) %s'\n"
macro index     I       ":set hdr_format='%4C %Z %?[?%[%H:%M]&%[%m/%d]? %-15.15L (%4l) %s'\n"
macro index     "\Cb"   "|urlview\n"

macro attach    "\Ck"	"|pgp -kaf\n"

macro  compose   E       "Ge"
macro compose S "Fpgp +verbose=0 -fast +clearsig=on\ny^T^Uapplication/pgp; +format=text; x-action=sign\n" # To pgp-sign the old way :)

charset-hook windows-1251 cp1251

send-hook   .         "unmy_hdr From"

folder-hook .         "set nostrict_threads nosave_empty sort=threads weed"
folder-hook .         "set mime_forward=ask-yes forward_decode nomark_old"
folder-hook .         'set sort_aux=date-received to_chars=" +TCFL"'
folder-hook .         \
 "set quote_regexp='^([]:})>|!%] ?|([~<]|-+)[|>]| {0,4}[:>|]|[a-z]+[>|]+ ?|=([^=0-9]|$))'"

folder-hook suspect   "set mime_forward=no noforward_decode"

folder-hook Mail      "set move=yes"
folder-hook Mail      "set hdr_format='%4C %Z %?[?%[%H:%M]&%[%m/%d]? %-15.15L (%4l) %s'"

folder-hook Lists     "set hdr_format='%4C %Z %?[?%[%H:%M]&%[%m/%d]? %-15.15F (%4l) %s'"
folder-hook Lists     'set save_empty to_chars=" +TCF "'

folder-hook spool     "set hdr_format='%4C %Z %?[?%[%H:%M]&%[%m/%d]? %-15.15L (%4l) %s'"
folder-hook spool     "set move=no"
#folder-hook misc      "push 'D~t cricket\n'"

folder-hook Lists/inet		"source ~/.Mutt/expire"
folder-hook Lists/allgurus	"set move=no"
folder-hook Lists/yesno		"set move=no"
folder-hook Lists/user-account	"set move=no"
folder-hook Lists/securelinux	"source ~/.Mutt/expire"
folder-hook Lists/sawmill	"source ~/.Mutt/expire"

folder-hook (procmail|smartlist) \
     'set quote_regexp="^([])>%] ?|([~<]|-+)[|>]| {0,4}>|[a-z]+[>|]+ ?|=([^=0-9]|$))"'

folder-hook IN        "set move=no"
folder-hook abuse.net "set move=no sort=date"
folder-hook Read      "set hdr_format='%4C %Z %?[?%[%H:%M]&%[%m/%d]? %-15.15F (%4l) %s'"
folder-hook exser     "set strict_threads"
folder-hook frontpage "set strict_threads"

folder-hook suspect   "set mark_old"

folder-hook notsuspect "set move=no"

