folder-hook .         "set nostrict_threads nosave_empty sort=threads"
folder-hook .         "set mime_forward=ask-yes forward_decode nomark_old"
folder-hook .         \
 "set quote_regexp='^([]:})>|!%] ?|(<|-+)[|>]| {0,4}[:>|]|[a-z]+[>|]+ ?|=([^=0-9]|$))'"

folder-hook suspect   "set mime_forward=no noforward_decode"

folder-hook Mail      "set move=yes"
folder-hook Mail      "set hdr_format='%4C %Z %[%m/%d] %-15.15L (%4l) %s'"

folder-hook Lists     "set hdr_format='%4C %Z %[%m/%d] %-15.15F (%4l) %s'"
folder-hook Lists     "set save_empty"

folder-hook spool     "set hdr_format='%4C %Z %[%m/%d] %-15.15L (%4l) %s'"
folder-hook spool     "set move=no"

folder-hook Lists/inet     "source ~/cvs/dotfiles/mutt.expire"
