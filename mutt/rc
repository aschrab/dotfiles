#unignore X-Mailing-List: User-Agent:
#unignore X-Envelope-To:
source ~/.Mutt/ignore

set sort=threads
set nomarkers

set date_format = "!%H:%M %Z %d %b %Y"
set status_chars=" *%"
set attribution="At %d, %?F?%f&I? wrote:"
set hdr_format="%4C %Z %?[?%[%H:%M]&%[%m/%d]? %-15.15L (%4l) %s"

set quote_regexp='^([]:})>|!%] ?|([~<]|-+)[|>]| {0,4}[:>|]|[a-z]+[>|]+ ?|=([^=0-9]|$))'

color body  red	default	\
 "((ftp|https?)://|(ftp|www[-a-z0-9]*)\\.)[^ \t\r\n\"<>]*[^].,:;!)? \t\r\n<>\"]"
color body  yellow	default	\
 '(mailto:)?[a-z0-9]([-+=._%!]?[a-z0-9])*@[-a-z0-9.]+\.[a-z][a-z]+'

color body magenta default '^-----(BEGIN|END) PGP .*'

set reply_regexp="^(re|aw)(\\[[0-9]+])?:[        ]*"

color normal            white   default
color status		black   green
color indicator		yellow	default
color tree		blue	default
color error		red	default
color attachment        blue	default

color hdrdefault	cyan	default
color header		red	default \
      "^X-(Suspect-reason|spam-action|procmail|Diagnostic|Processed|Country):"

color index             red     default ~T

color signature		cyan	default

# continued line indicator
color markers           blue    default
color quoted		green	default
