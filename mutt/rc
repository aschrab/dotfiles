unlists *
unalias *

set forw_format='Fwd: %s (from %a)'
set status_format=" %r Mutt:%-25.25f [Msgs:%?M?%M/?%m New:%n%?F? Flag:%F?%?t? Tag:%t? In:%b%?p? Post:%p?]  (%s)%| "

alternative_order text/enriched text/plain text application/postscript image/* 

#set sendmail="/usr/lib/sendmail -oi -oem"
set ispell="/home/aarons/bin/spell"

set alternates='((aarons|(aaron\.|a_)schrab|ats|lsm|bofh|procmail|list(admin|master))@([a-z0-9-]+\.)*execpc\.com|postmaster@(comet|lists)\.execpc\.com|aaron\.schrab@voyager\.net|(aaron.*|root|.*master|ats|bofh)@schrab\.com|.*@pug\.qqx\.org)'

hdr_order From: Subject: Date: To: Newsgroups: Cc: X-Mailer: User-Agent: Content-Type: Content-Transfer-Encoding: X-Procmail: X-Suspect-reason:

set pager_index_lines=8

#ignore *
#unignore From: To: Newsgroups: Subject: Date: CC:
#unignore Sender: X-Mailer: Expires:
