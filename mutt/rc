# vim: tw=0
unlists *
unalias *

set forw_format='Fwd: %s (from %a)'
set status_format=" %r Mutt:%-25.25f [Msgs:%?M?%M/?%m New:%n%?F? Flag:%F?%?t? Tag:%t? In:%b%?p? Post:%p?]  (%s)%| "

alternative_order text/enriched text/plain text application/postscript image/* 

set sendmail="/home/aarons/bin/sendmail.pl -oi -oem"

set alternates='((aarons|(aaron\.|a_)schrab|ats|lsm|bofh|procmail|list(admin|master))@([a-z0-9-]+\.)*execpc\.com|postmaster@(comet|lists)\.execpc\.com|aaron@warrior\.mscs\.mu\.edu|(aaron.*|root|.*master|ats|bofh)@schrab\.com)'

hdr_order From: Subject: Date: To: Newsgroups: Cc: X-Mailer: Content-Type: Content-Transfer-Encoding: X-Procmail: X-Suspect-reason:

set pager_index_lines=8

ignore *
unignore From: To: Newsgroups: Subject: Date: CC:
unignore Sender: X-Mailer: Expires:
unignore Content-Type: Content-Transfer-Encoding: X-Diagnostic: X-Processed:
unignore X-Procmail: X-Suspect-reason: X-Country: Mail-Followup-To:
unignore X-Mailing-List:
#unignore X-Envelope-To:

set sort=threads
set sort_aux=date

set date_format = "!%H:%M %Z %d %b %Y"
set status_chars=" *%"
set attribution = "At %d, %f wrote:"
set hdr_format="%4C %Z %[%m/%d] %-15.15L (%4l) %s"

set quote_regexp='^([]})>|:!] ?| {0,4}[>|]|[a-z-]+[>|]+ ?)'

color body  red	black	\
 "((ftp|https?)://|(ftp|www[-a-z0-9]*)\\.)[^ \t\r\n\"<>]*[^].,:;!)? \t\r\n<>\"]"
color body  yellow	black	\
 '(mailto:)?[a-z0-9]([-+=._%!]?[a-z0-9])*@[-a-z0-9.]+\.[a-z][a-z]+'

color body magenta black '^-----(BEGIN|END) PGP .*'

set reply_regexp="^(re|aw)(\\[[0-9]+])?:[        ]*"

color normal            white   black
color status		black   green
color indicator		yellow	black
color tree		blue	black
color error		red	black
color attachment        blue	black

color hdrdefault	cyan	black
color header		red	black \
      "^X-(Suspect-reason|spam-action|procmail|Diagnostic|Processed|Country):"

color signature		cyan	black

# continued line indicator
color markers           blue    black
color quoted		green	black
#color quoted1		blue	black
#color quoted2		magenta	black
#color quoted3		brightgreen	black
#color quoted4           brightblue      black
#color quoted5           brightmagenta   black
#color quoted6           brightwhite     black
#color quoted7		brightcyan	black
#color quoted8		brightyellow	black
#color quoted9		brightred	black

#mono  subject		underline

auto_view text/html application/pgp-keys application/x-tar-gz text/x-internet-signup application/x-sh

source /home/aarons/.Mutt/aliases

set editor="vim '+/^$/+1'"
#set editor="gnuclient -nw"
set alias_file=~/.Mutt/aliases

set nohelp

set noconfirmappend
set noconfirmcreate

set print=ask-no    # confirm printing
set delete=yes      # purge deleted messages? normally yes, but meaning differs
                    # between 0.61 and 0.62
set recall=no       # don't ask about recalling when mailing
set copy=yes
set move=yes        # automatically move read messages to read folder
set include=yes     # include message in replies
set postpone=no     # never postpone when quitting send menu
set abort_unmodified=no
set abort_nosubject=no

#set autoedit                   # go straight to editor for messages
set fast_reply                 # go straight to editor for replies
set edit_hdrs                  #    include headers in editor
set dsn_notify=failure         # notify on transmission failure
set dsn_return=full            #   include full message
set folder=~/Mail
set header                     # include full header in replies
set nomime_fwd                   # forward as attachment
set pager_context=1            # show 1 line from prev. page
set postponed=~/Mail/Postponed # where to save postponed messages
set record=~/Mail/Misc         # save copies of outgoing mail
set mbox=~/Mail/Misc
set reverse_alias              # show aliases in message lists
set reverse_name               # use address mail was sent to when replying
set save_name                  # save messages in folder named for addressee
set tilde                      # pad end of messages
set timeout=30                 # seconds inactivity before looking for new mail
#set web_browser="url_handler.sh"
set nomark_old                 # all unread mail is marked as new
set skip_old
set pgp_sign_as="0xE8D1D751"
set pgp_verify_sig=yes         # Verify signature automatically
set pgp_replyencrypt
set pgp_replysign
unset use_domain
set nopipe_decode              # don't decode MIME or weed headers when piping
set nowait_key                 # don't wait for a key after running programs
set nobeep
#set pager_stop


bind  pager 	b	previous-page
bind  pager	B	bounce-message
bind  pager     *       bottom
bind  pager     G       bottom
bind  pager	<Up>	previous-line
bind  pager	<Down>	next-line
bind  pager     "\Cn"   search-next
bind  pager     n       next-unread
macro pager     "\Ck"	"|pgp -kaf\n"
macro pager     "\Cb"   "|urlview\n"

bind  index	B	bounce-message
bind  index     n       next-entry
macro index     A       "c+Lists/inet\n"
macro index     "\Ck"	"|pgp -kaf\n"
macro index	G	"!fetchmail\n"
macro index     i       ":set hdr_format='%4C %Z %[%m/%d] %-15.15F (%4l) %s'\n"
macro index     I       ":set hdr_format='%4C %Z %[%m/%d] %-15.15L (%4l) %s'\n"
macro index     "\Cb"   "|urlview\n"

macro attach    "\Ck"	"|pgp -kaf\n"

bind  compose   E       edit-file
macro compose S "Fpgp +verbose=0 -fast +clearsig=on\ny^T^Uapplication/pgp; +format=text; x-action=sign\n" # To pgp-sign the old way :)

send-hook   .         "unmy_hdr From"

folder-hook .         "set nostrict_threads nosave_empty sort=threads"
folder-hook .         "set mime_forward=ask-yes forward_decode nomark_old"
folder-hook .         \
      "set quote_regexp='^([]})>|:!] ?| {0,4}[>|]|[a-z-]+[>|]+ ?)'"

folder-hook suspect   "set mime_forward=no noforward_decode"

folder-hook Mail      "set move=yes"
folder-hook Mail      "set hdr_format='%4C %Z %[%m/%d] %-15.15L (%4l) %s'"

folder-hook Lists     "set hdr_format='%4C %Z %[%m/%d] %-15.15F (%4l) %s'"
folder-hook Lists     "set save_empty"

folder-hook spool     "set hdr_format='%4C %Z %[%m/%d] %-15.15L (%4l) %s'"
folder-hook spool     "set move=yes"

folder-hook Lists/inet "set move=no"
folder-hook Lists/inet 'push "T~E !(~O|~N|~F)\n"'

folder-hook (procmail|smartlist|mutt) \
            'set quote_regexp="^([])>] ?| {0,4}>|[a-z-]+[>|]+ ?)"'

folder-hook IN        "set move=no"
folder-hook abuse.net "set move=no sort=date"
folder-hook Read      "set hdr_format='%4C %Z %[%m/%d] %-15.15F (%4l) %s'"
folder-hook exser     "set strict_threads"
folder-hook frontpage "set strict_threads"

folder-hook suspect   "set mark_old"

folder-hook notsuspect "set move=no"

