# vim: ft=gitconfig tabstop=4 shiftwidth=4
[user]
	email = aaron@schrab.com
	name = Aaron Schrab
[core]
	pager = less
[alias]
	co = checkout
	ci = commit -v
	st = status
	last = log -1 HEAD
	unstage = reset HEAD --
[push]
	default = current
[filter "date-prop"]
	clean =  perl -pe 's/,,Date[^,]*,,/,,Date,,/i'
	smudge = perl -pe 's/,,Date[^,]*,,/,,Date: @{[scalar gmtime]},,/i'
