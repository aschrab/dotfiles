[core]
	pager        = less -R
	#autocrlf    = input
	safecrlf     = true
	excludesfile = ~/.gitignore

[diff]
	renames        = true
	mnemonicprefix = yes
	algorithm      = patience

[merge]
	conflictstyle = diff3
	defaultToUpstream = yes
	log = 999

[mergetool "fugitive"]
	cmd = vim -f -c "Gdiff" "$MERGED"

[rerere]
	enabled = yes
	autoupdate = yes

[alias]
	root        = rev-parse --show-toplevel
	co          = checkout
	ci          = commit -v
	cia         = commit -v -a
	d           = diff
	dif         = diff
	ds          = diff --staged
	sh          = show
	sho         = show
	st          = status
	up          = "!echo Use pull >&2 ; exit 1"
	l1          = log --pretty=oneline
	ls          = log --decorate --graph --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]"
	ll          = log --decorate --numstat --date=short --pretty=format:"%C(yellow)%ad\\ %h%Cred%d\\ %Creset%s%Cblue\\ [%cn]"
	last        = log --stat -p -1 HEAD
	unstage     = reset HEAD --
	srebase     = svn rebase
	sr          = svn rebase
	dcommit     = svn dcommit
	dc          = svn dcommit
	sf          = svn fetch
	review      = "!f() { for rev in $(git log --reverse --format=%H $@); do git show $rev; done; }; f"
	show-commit = log -1 -p
	lol         = log --graph --decorate --pretty=oneline --abbrev-commit
	push-new-repo = push --receive-pack=git-receive-new-repo --all

[push]
	default = current

[filter "date-prop"]
	clean  = perl -pe 's/,,Date[^,]*,,/,,Date,,/i'
	smudge = perl -pe 's/,,Date[^,]*,,/,,Date: @{[scalar gmtime]},,/i'

[color]
	branch      = auto
	diff        = auto
	interactive = auto
	status      = auto

[color "status"]
	added     = green
	untracked = yellow
	updated   = blue
	changed   = red

[status]
	submodulesummary = true

