[url "git@git.it.corp:"]
	pushInsteadOf = git://git.it.corp/
	pushInsteadOf = http://git.it.corp/
[core]
	pager = less -R
	#autocrlf = input
	safecrlf = true
	excludesfile = ~/.gitignore
[diff]
	renames = true
	mnemonicprefix = yes
[merge]
	conflictstyle = diff3
[alias]
	co = checkout
	ci = commit -v
	cia = commit -v -a
	d = diff
	dif = diff
	ds = diff --staged
	st = status
	up = "!echo Use pull >&2 ; exit 1"
	l1 = log --pretty=oneline
	last = log --stat -p -1 HEAD
	unstage = reset HEAD --
	srebase = svn rebase
	sr = svn rebase
	dcommit = svn dcommit
	dc = svn dcommit
	sf = svn fetch
	review = "!f() { for rev in $(git log --reverse --format=%H $@); do git show $rev; done; }; f"
	show-commit = log -1 -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit

[push]
	default = current
[filter "date-prop"]
	clean =  perl -pe 's/,,Date[^,]*,,/,,Date,,/i'
	smudge = perl -pe 's/,,Date[^,]*,,/,,Date: @{[scalar gmtime]},,/i'
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
