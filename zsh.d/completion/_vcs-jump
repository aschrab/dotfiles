#compdef vcs-jump

local context state state_descr line
typeset -A opt_args

local commands=(
  'diff:diff hunks'
  'merge:merge conflicts'
  'grep:pattern matches'
)

if [[ $CURRENT -le 2 ]]
then
  _describe "command" commands
else
  local cmd=$words[2]

  case "$cmd" in
    merge)
      _message "merge takes no arguments"
      ;;
    *)
      shift words
      (( CURRENT-- ))
      _git-"$cmd"
      ;;
  esac
fi
