#!/bin/sh
set -e

if [ -d "$1" ]; then
  cd "$1"
  shift
fi

md2html &
converter=$!
trap 'kill "$converter"' EXIT

if command -v live-server >/dev/null 2>&1 ; then
  live-server --no-browser --ignore=.git "$@" .
elif command -v python3; then
  python3 -m http.server
else
  python -m SimpleHTTPServer
fi
