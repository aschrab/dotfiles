#!/bin/bash
set -ueo pipefail

die () {
  echo "$*" >&2
  exit 1
}

usage () {
  die "$0: [-f] branch"
}

fetch=n
if [[ "${1:-}" = '-f' ]]; then
  fetch=y
  shift
fi

branch="${1:-}"
[[ -n "${branch}" ]] || usage

remote=origin
rbranch=$branch

[[ $fetch = y ]] && git fetch "${remote}"

git push . "${remote}/${rbranch}:${branch}"
