" Allow Meta keys to work in gnome-terminal
" Might work for other terminals as well, or make things worse

" Enable terminal timeout, and set a short length.
" This should prevent actual escape key being interpretted as start of meta
" sequence
set ttimeout ttimeoutlen=1

set <M-a>=a
set <M-b>=b
set <M-c>=c
set <M-d>=d
set <M-e>=e
set <M-f>=f
set <M-g>=g
set <M-h>=h
set <M-i>=i
set <M-j>=j
set <M-k>=k
set <M-l>=l
set <M-m>=m
set <M-n>=n
set <M-o>=o
set <M-p>=p
set <M-q>=q
set <M-r>=r
set <M-s>=s
set <M-t>=t
set <M-u>=u
set <M-v>=v
set <M-w>=w
set <M-x>=x
set <M-y>=y
set <M-z>=z
