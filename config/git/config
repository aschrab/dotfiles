# vim: ft=gitconfig tabstop=4 shiftwidth=4 noexpandtab
[core]
	pager        = less -R
	#autocrlf    = input
	safecrlf     = true
	#excludesfile = ~/.gitignore
	preloadindex = yes
	commentChar  = !

[user]
	name          = Aaron Schrab
	#email         = aaron@schrab.com
	useconfigonly = true
	signingkey    = 6DB5C725

[include]
	path = ~/.gitconfig.local
	path = local

[advice]
	statusHints = no

[status]
	submodulesummary = true
	showUntrackedFiles = all

[log]
	abbrevCommit = true
	decorate = auto

[diff]
	renames        = true
	mnemonicprefix = yes
	algorithm      = patience
	#algorithm      = histogram # Too new for some of the systems I use
	compactionHeuristic =  yes
	indentHeuristic = yes

[diff "ini"]
	xfuncname = "^\\[.*\\]"

[commit]
	verbose = yes

[fetch]
	prune = yes

[pull]
	ff = only
[rebase]
	autosquash = true
	missingCommitsCheck = error
	instructionFormat = "[%aN] %s"
[push]
	default = current

[merge]
	conflictstyle = diff3
	defaultToUpstream = yes
	log = 999

[branch "master"]
	mergeOptions = --ff-only

[init]
	templatedir = ~/.git_template

[help]
	autocorrect = 15

[mergetool "fugitive"]
	cmd = vim -f -c "Gdiff" "$MERGED"

[rerere]
	enabled = yes
	autoupdate = yes

[alias]
	g           = "!f() { git $@; }; f"
	git         = "!f() { git $@; }; f"
	v           = "!git gitv"
	gitv        = "!f() { vim $(git rev-parse --git-dir)/index -c \":Gitv $@\" -c ':tabclose 1'; }; f"
	root        = rev-parse --show-toplevel
	conf        = config
	co          = checkout
	ci          = commit -v
	cia         = commit -v -a
	ad          = add
	d           = diff
	dif         = diff
	difff       = diff
	ds          = diff --staged
	id          = log --no-walk --format=%h
	sh          = show
	sho         = show
	st          = status -sb
	b           = branch
	pick        = cherry-pick
	fethc       = fetch
	up          = "!echo Use pull >&2 ; exit 1"
	ctags       = "!ctags --recurse"
	ff          = merge --ff-only
	l1          = log --pretty=format:"'%C(yellow)%h %>(15,trunc)%C(green)%aN %<(14)%C(blue)%ar %C(reset)%<(70,trunc)%s'"
	ls          = log --decorate --graph --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]"
	ll          = log --decorate --numstat --date=short --pretty=format:"%C(yellow)%ad\\ %h%Cred%d\\ %Creset%s%Cblue\\ [%cn]"
	tree        = "!f() { base=$(git show-branch --merge-base $@) && git ls --boundary ^$base^ $@ --; }; f"
	last        = log --stat -p -1 HEAD
	stashed     = stash list --pretty='%gd: %Cred%h%Creset %Cgreen[%ar]%Creset %s'
	unstage     = reset HEAD --
	pr          = pull-request
	review      = "!f() { for rev in $(git log --reverse --format=%H $@); do git show $rev; done; }; f"
	show-commit = log -1 -p
	lol         = log --graph --decorate --pretty=oneline --abbrev-commit
	puhs        = push
	push-new-repo = push --receive-pack=git-receive-new-repo --all
	submodule-annotate = submodule foreach 'git update-ref --create-reflog -m \"Update from parent repo\" refs/heads/submodule-parent $sha1 || true'
	wtree = worktree
	recent = "for-each-ref --count=10 --sort=-committerdate refs/heads --format='%(HEAD) %(color:blue)%(align:14)%(committerdate:relative)%(end)%(color:reset) %(color:red)%(align:10)%(objectname:short)%(end)%(color:reset) %(color:green)%(align:20)%(authorname)%(end)%(color:reset) %(color:yellow)%(refname:short)%(color:reset)\n  %(align:14)%(end) %(subject)'"

[filter "date-prop"]
	clean  = perl -pe 's/,,Date[^,]*,,/,,Date,,/i'
	smudge = perl -pe 's/,,Date[^,]*,,/,,Date: @{[scalar gmtime]},,/i'

[color]
	branch      = auto
	diff        = auto
	interactive = auto
	status      = auto

[color "status"]
	added     = green
	untracked = yellow
	updated   = blue
	changed   = red

