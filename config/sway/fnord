# Builtin
output eDP-1 {
  position 0 1560
}
bar {
  output eDP-1
  position bottom
  status_command i3status
  separator_symbol " | "
}

# Upper
output DP-2 {
  position 3840 0
  transform 180
}
bar {
  output DP-2
  position bottom
  status_command i3status
  separator_symbol " | "
}

# Lower
output DP-3 {
  position 3840 2160
}
bar {
  output DP-3
  position bottom
  status_command i3status
  separator_symbol " | "
  tray_output DP-3
}

include i3

bindsym $mod+Control+1 move workspace to output eDP-1
bindsym $mod+Control+2 move workspace to output DP-2
bindsym $mod+Control+3 move workspace to output DP-3

font pango:Fira Code 12

for_window [shell="xdg_shell"] title_format "Ⓦ %title"
for_window [shell="xwayland"] title_format "Ⓧ %title"
